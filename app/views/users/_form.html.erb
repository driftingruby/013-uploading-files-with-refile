<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>
  <div class='row'>
    <div class='col-xs-6'>
      <div class="form-inputs">
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :email %>
        <%= f.attachment_field :profile_image %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
